@model Entities.CambiarPasswordDto

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-shield-lock"></i> Cambiar Contraseña
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="CambiarPassword" method="post">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            </div>
                        }
                        <div class="mb-3">
                            <label asp-for="PasswordActual" class="form-label">Contraseña Actual</label>
                            <input asp-for="PasswordActual" type="password" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="PasswordNuevo" class="form-label">Nueva Contraseña</label>
                            <input asp-for="PasswordNuevo" type="password" class="form-control" required />
                            <div class="form-text">
                                Mínimo 8 caracteres, incluir mayúsculas, minúsculas, números y caracteres especiales.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PasswordNuevoConfirmacion" class="form-label">Confirmar Nueva Contraseña</label>
                            <input asp-for="PasswordNuevoConfirmacion" type="password" class="form-control" required />
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Cambiar Contraseña
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>