@model List<Entities.PacienteDto>

@{
    ViewData["Title"] = "Pacientes";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-people"></i> Pacientes</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Crear" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Paciente
            </a>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-@TempData["TipoMensaje"] alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Búsqueda -->
    <div class="card mb-3">
        <div class="card-body">
            <form asp-action="Buscar" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text"
                           name="termino"
                           class="form-control"
                           placeholder="Buscar por nombre, apellido, documento o número de afiliado..."
                           value="@ViewBag.TerminoBusqueda" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Apellido y Nombre</th>
                                <th>Documento</th>
                                <th>Edad</th>
                                <th>Teléfono</th>
                                <th>Obra Social</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var paciente in Model)
                            {
                                <tr>
                                    <td><strong>@paciente.NombreCompleto</strong></td>
                                    <td>@paciente.DocumentoCompleto</td>
                                    <td>@(paciente.Edad.HasValue ? $"{paciente.Edad} años" : "-")</td>
                                    <td>@(paciente.Telefono ?? "-")</td>
                                    <td>@paciente.ObraSocialPlan</td>
                                    <td>
                                        @if (paciente.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Detalle" asp-route-id="@paciente.PacienteId"
                                               class="btn btn-sm btn-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Editar" asp-route-id="@paciente.PacienteId"
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger"
                                                    onclick="confirmarEliminacion(@paciente.PacienteId, '@paciente.NombreCompleto')"
                                                    title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <p class="text-muted">Total: <strong>@Model.Count</strong> pacientes</p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay pacientes registrados.
            <a asp-action="Crear">Crear el primero</a>
        </div>
    }
</div>

<form id="formEliminar" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmarEliminacion(id, nombre) {
            if (confirm('¿Está seguro que desea eliminar al paciente ' + nombre + '?')) {
                var form = document.getElementById('formEliminar');
                form.action = '/Pacientes/Eliminar/' + id;
                form.submit();
            }
        }
    </script>
}