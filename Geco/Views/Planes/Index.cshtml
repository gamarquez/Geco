@model List<Entities.PlanDto>

@{
    ViewData["Title"] = "Todos los Planes";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-card-list"></i> Todos los Planes</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Crear" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Plan
            </a>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-@TempData["TipoMensaje"] alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Obra Social</th>
                                <th>Plan</th>
                                <th>Código</th>
                                <th>Cobertura</th>
                                <th>Copago</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var plan in Model)
                            {
                                <tr>
                                    <td><strong>@plan.ObraSocialNombre</strong></td>
                                    <td>@plan.Nombre</td>
                                    <td>@(plan.Codigo ?? "-")</td>
                                    <td>@plan.CoberturaTexto</td>
                                    <td>@(plan.Copago.HasValue ? $"${plan.Copago:N2}" : "-")</td>
                                    <td>
                                        @if (plan.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Detalle" asp-route-id="@plan.PlanId"
                                               class="btn btn-sm btn-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Editar" asp-route-id="@plan.PlanId"
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <p class="text-muted">Total: <strong>@Model.Count</strong> planes</p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay planes registrados.
        </div>
    }
</div>