@model Entities.ActualizarPlanDto

@{
    ViewData["Title"] = "Editar Plan";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> Editar Plan
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <input type="hidden" asp-for="PlanId" />

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="ObraSocialId" class="form-label">Obra Social *</label>
                            <select asp-for="ObraSocialId"
                                    asp-items="ViewBag.ObrasSociales"
                                    class="form-select"
                                    required>
                                <option value="">-- Seleccionar --</option>
                            </select>
                            <span asp-validation-for="ObraSocialId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre del Plan *</label>
                                <input asp-for="Nombre" class="form-control" required />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Codigo" class="form-label">Código</label>
                                <input asp-for="Codigo" class="form-control" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PorcentajeCobertura" class="form-label">Porcentaje de Cobertura (%)</label>
                                <input asp-for="PorcentajeCobertura"
                                       class="form-control"
                                       type="number"
                                       step="0.01"
                                       min="0"
                                       max="100" />
                                <span asp-validation-for="PorcentajeCobertura" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Copago" class="form-label">Copago ($)</label>
                                <input asp-for="Copago"
                                       class="form-control"
                                       type="number"
                                       step="0.01"
                                       min="0" />
                                <span asp-validation-for="Copago" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label">Observaciones</label>
                            <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" />
                            <label asp-for="Activo" class="form-check-label">Activo</label>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Guardar Cambios
                            </button>
                            <a asp-controller="ObrasSociales" asp-action="Planes" asp-route-id="@Model.ObraSocialId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>