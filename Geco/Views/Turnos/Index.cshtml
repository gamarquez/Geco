@model List<DateTime>

@{
    ViewData["Title"] = "Gestión de Turnos";
    var mostrarFormulario = ViewBag.MostrarFormulario ?? true;
    var agendaPorFecha = ViewBag.AgendaPorFecha as Dictionary<DateTime, (List<TimeSpan> HorariosLibres, List<Entities.TurnoDto> Turnos)>;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-calendar-check"></i> Gestión de Turnos</h2>
            @if (!string.IsNullOrEmpty(ViewBag.ProfesionalNombre))
            {
                <h5 class="text-muted">@ViewBag.ProfesionalNombre</h5>
            }
        </div>
        <div class="col-md-6 text-end">
            @if (!mostrarFormulario)
            {
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Nueva Búsqueda
                </a>
            }
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-@TempData["TipoMensaje"] alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros de búsqueda -->
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title"><i class="bi bi-funnel"></i> Seleccionar Profesional y Rango de Fechas</h5>
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Profesional *</label>
                    <select name="profesionalId" asp-items="ViewBag.Profesionales" class="form-select" required>
                        <option value="">-- Seleccionar profesional --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Desde *</label>
                    <input type="date" name="fechaDesde" class="form-control" value="@ViewBag.FechaDesde?.ToString("yyyy-MM-dd")" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Hasta</label>
                    <input type="date" name="fechaHasta" class="form-control" value="@ViewBag.FechaHasta?.ToString("yyyy-MM-dd")" />
                    <small class="form-text text-muted">Opcional. Máximo 7 días.</small>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!mostrarFormulario && Model != null && Model.Any())
    {
        <!-- Grilla de disponibilidades -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-calendar3"></i> Disponibilidad de Agenda
                    <span class="badge bg-light text-dark ms-2">@Model.Count día(s)</span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="10%" class="text-center">Horario</th>
                                @foreach (var fecha in Model)
                                {
                                    <th class="text-center">
                                        <div>@fecha.ToString("dddd", new System.Globalization.CultureInfo("es-ES"))</div>
                                        <div><strong>@fecha.ToString("dd/MM/yyyy")</strong></div>
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                // Obtener todos los horarios únicos de todas las fechas
                                var todosLosHorarios = new HashSet<TimeSpan>();
                                if (agendaPorFecha != null)
                                {
                                    foreach (var agenda in agendaPorFecha.Values)
                                    {
                                        todosLosHorarios.UnionWith(agenda.Item1);
                                    }
                                }

                                var horariosOrdenados = todosLosHorarios.OrderBy(h => h).ToList();
                            }

                            @if (horariosOrdenados.Any())
                            {
                                @foreach (var horario in horariosOrdenados)
                                {
                                    <tr>
                                        <td class="text-center align-middle fw-bold">@horario.ToString(@"hh\:mm")</td>
                                        @foreach (var fecha in Model)
                                        {
                                            var agenda = agendaPorFecha != null && agendaPorFecha.ContainsKey(fecha)
                                                ? agendaPorFecha[fecha]
                                                : (new List<TimeSpan>(), new List<Entities.TurnoDto>());

                                            var turnoEnHorario = agenda.Item2.FirstOrDefault(t => t.HoraInicio == horario);
                                            var tieneDisponibilidad = agenda.Item1.Contains(horario);

                                            @if (turnoEnHorario != null)
                                            {
                                                <!-- Slot ocupado -->
                                                <td class="p-2 slot-ocupado" title="@turnoEnHorario.PacienteNombreCompleto - @turnoEnHorario.MotivoConsulta">
                                                    <div class="slot-content">
                                                        <div class="slot-header">
                                                            <i class="bi bi-person-fill"></i>
                                                            <span class="badge @turnoEnHorario.EstadoBadgeClass">@turnoEnHorario.Estado</span>
                                                        </div>
                                                        <div class="slot-paciente">@turnoEnHorario.PacienteNombreCompleto</div>
                                                        <div class="slot-motivo text-truncate">@turnoEnHorario.MotivoConsulta</div>
                                                        <div class="slot-actions mt-2">
                                                            <a asp-action="Detalle" asp-route-id="@turnoEnHorario.TurnoId" class="btn btn-sm btn-outline-info">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            @if (turnoEnHorario.Estado != "Cancelado" && turnoEnHorario.Estado != "Completado")
                                                            {
                                                                <a asp-action="Editar" asp-route-id="@turnoEnHorario.TurnoId" class="btn btn-sm btn-outline-warning">
                                                                    <i class="bi bi-pencil"></i>
                                                                </a>
                                                            }
                                                        </div>
                                                    </div>
                                                </td>
                                            }
                                            else if (tieneDisponibilidad)
                                            {
                                                <!-- Slot libre -->
                                                <td class="p-2 slot-libre"
                                                    onclick="abrirModalAsignarTurno('@ViewBag.ProfesionalId', '@fecha.ToString("yyyy-MM-dd")', '@horario.ToString(@"hh\:mm")')"
                                                    style="cursor: pointer;"
                                                    title="Hacer clic para asignar turno">
                                                    <div class="slot-content text-center">
                                                        <i class="bi bi-plus-circle" style="font-size: 2rem;"></i>
                                                        <div class="mt-1"><small>Disponible</small></div>
                                                    </div>
                                                </td>
                                            }
                                            else
                                            {
                                                <!-- Sin disponibilidad -->
                                                <td class="p-2 slot-sin-disponibilidad text-center">
                                                    <i class="bi bi-dash-circle text-muted"></i>
                                                    <div><small class="text-muted">No disponible</small></div>
                                                </td>
                                            }
                                        }
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="100" class="text-center py-5">
                                        <i class="bi bi-calendar-x" style="font-size: 3rem; color: #ccc;"></i>
                                        <h5 class="mt-3">No hay disponibilidades configuradas</h5>
                                        <p class="text-muted">Configure las disponibilidades de agenda para este profesional.</p>
                                        <a asp-controller="Disponibilidades" asp-action="Index" asp-route-profesionalId="@ViewBag.ProfesionalId" class="btn btn-warning">
                                            <i class="bi bi-gear"></i> Configurar Disponibilidades
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="row text-center">
                    <div class="col-md-4">
                        <span class="badge bg-success" style="font-size: 1rem; padding: 10px 20px;">
                            <i class="bi bi-check-circle"></i> Disponible - Haga clic para asignar
                        </span>
                    </div>
                    <div class="col-md-4">
                        <span class="badge bg-danger" style="font-size: 1rem; padding: 10px 20px;">
                            <i class="bi bi-person-fill"></i> Ocupado
                        </span>
                    </div>
                    <div class="col-md-4">
                        <span class="badge bg-secondary" style="font-size: 1rem; padding: 10px 20px;">
                            <i class="bi bi-dash-circle"></i> Sin disponibilidad
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (!mostrarFormulario)
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> No se encontraron resultados
        </div>
    }
</div>

<!-- Modal para asignar turno -->
<div class="modal fade" id="modalAsignarTurno" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Asignar Turno</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="formAsignarTurno" asp-action="AsignarTurnoRapido" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="profesionalId" id="profesionalIdHidden" />
                <input type="hidden" name="fecha" id="fechaHidden" />
                <input type="hidden" name="hora" id="horaHidden" />
                <input type="hidden" name="pacienteId" id="pacienteIdHidden" />
                <input type="hidden" name="duracionMinutos" value="30" />

                <div class="modal-body">
                    <div class="alert alert-info">
                        <strong>Profesional:</strong> <span id="profesionalDisplay">@ViewBag.ProfesionalNombre</span><br />
                        <strong>Fecha:</strong> <span id="fechaDisplay"></span><br />
                        <strong>Horario:</strong> <span id="horaDisplay"></span>
                    </div>

                    <!-- Búsqueda de paciente por documento -->
                    <div class="card mb-3" id="seccionBusqueda">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0"><i class="bi bi-search"></i> Buscar Paciente</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="tipoDocumentoBusqueda" class="form-label">Tipo Documento *</label>
                                    <select id="tipoDocumentoBusqueda" class="form-select">
                                        <option value="DNI" selected>DNI</option>
                                        <option value="LC">LC</option>
                                        <option value="LE">LE</option>
                                        <option value="Pasaporte">Pasaporte</option>
                                        <option value="Otro">Otro</option>
                                    </select>
                                </div>
                                <div class="col-md-5 mb-3">
                                    <label for="numeroDocumentoBusqueda" class="form-label">Número Documento *</label>
                                    <input type="text" id="numeroDocumentoBusqueda" class="form-control" placeholder="Ej: 12345678" />
                                </div>
                                <div class="col-md-3 d-flex align-items-end mb-3">
                                    <button type="button" class="btn btn-primary w-100" onclick="buscarPaciente()">
                                        <i class="bi bi-search"></i> Buscar
                                    </button>
                                </div>
                            </div>
                            <div id="resultadoBusqueda"></div>
                        </div>
                    </div>

                    <!-- Información del paciente encontrado -->
                    <div class="card mb-3 d-none" id="seccionPacienteEncontrado">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0"><i class="bi bi-person-check"></i> Paciente Encontrado</h6>
                        </div>
                        <div class="card-body">
                            <div id="infoPaciente"></div>
                            <button type="button" class="btn btn-sm btn-secondary mt-2" onclick="cambiarPaciente()">
                                <i class="bi bi-arrow-left"></i> Buscar otro paciente
                            </button>
                        </div>
                    </div>

                    <!-- Motivo de consulta -->
                    <div class="mb-3 d-none" id="seccionMotivoConsulta">
                        <label for="motivoConsulta" class="form-label">Motivo de Consulta *</label>
                        <textarea name="motivoConsulta" id="motivoConsulta" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success d-none" id="btnAsignarTurno">
                        <i class="bi bi-check-circle"></i> Asignar Turno
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .slot-libre {
            background-color: #d4edda;
            border: 2px solid #28a745 !important;
            transition: all 0.2s ease;
        }
        .slot-libre:hover {
            background-color: #c3e6cb;
            transform: scale(1.02);
            box-shadow: 0 4px 8px rgba(40, 167, 69, 0.3);
        }
        .slot-ocupado {
            background-color: #f8d7da;
            border: 2px solid #dc3545 !important;
        }
        .slot-sin-disponibilidad {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6 !important;
        }
        .slot-content {
            min-height: 100px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .slot-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 5px;
        }
        .slot-paciente {
            font-weight: bold;
            font-size: 0.9rem;
            margin-bottom: 3px;
        }
        .slot-motivo {
            font-size: 0.85rem;
            color: #666;
        }
        .slot-actions {
            display: flex;
            gap: 5px;
            justify-content: center;
        }
        table th, table td {
            vertical-align: middle;
        }
    </style>
}

@section Scripts {
    <script>
        var modalAsignarTurno = new bootstrap.Modal(document.getElementById('modalAsignarTurno'));

        function abrirModalAsignarTurno(profesionalId, fecha, hora) {
            // Resetear el modal
            document.getElementById('profesionalIdHidden').value = profesionalId;
            document.getElementById('fechaHidden').value = fecha;
            document.getElementById('horaHidden').value = hora;
            document.getElementById('pacienteIdHidden').value = '';
            document.getElementById('motivoConsulta').value = '';
            document.getElementById('tipoDocumentoBusqueda').value = 'DNI';
            document.getElementById('numeroDocumentoBusqueda').value = '';
            document.getElementById('resultadoBusqueda').innerHTML = '';

            // Mostrar información del turno
            var fechaObj = new Date(fecha + 'T00:00:00');
            document.getElementById('fechaDisplay').textContent = fechaObj.toLocaleDateString('es-ES', {
                weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
            });
            document.getElementById('horaDisplay').textContent = hora;

            // Mostrar sección de búsqueda y ocultar otras
            document.getElementById('seccionBusqueda').classList.remove('d-none');
            document.getElementById('seccionPacienteEncontrado').classList.add('d-none');
            document.getElementById('seccionMotivoConsulta').classList.add('d-none');
            document.getElementById('btnAsignarTurno').classList.add('d-none');

            modalAsignarTurno.show();
        }

        function buscarPaciente() {
            var tipoDoc = document.getElementById('tipoDocumentoBusqueda').value;
            var numeroDoc = document.getElementById('numeroDocumentoBusqueda').value.trim();
            var resultadoDiv = document.getElementById('resultadoBusqueda');

            if (!numeroDoc) {
                resultadoDiv.innerHTML = '<div class="alert alert-warning">Por favor, ingrese el número de documento</div>';
                return;
            }

            resultadoDiv.innerHTML = '<div class="text-center"><div class="spinner-border spinner-border-sm" role="status"></div> Buscando...</div>';

            fetch('/Turnos/BuscarPacientePorDocumento?tipoDocumento=' + encodeURIComponent(tipoDoc) + '&numeroDocumento=' + encodeURIComponent(numeroDoc))
                .then(response => response.json())
                .then(data => {
                    if (data.encontrado) {
                        resultadoDiv.innerHTML = '';
                        mostrarPacienteEncontrado(data.paciente);
                    } else {
                        resultadoDiv.innerHTML =
                            '<div class="alert alert-warning">' +
                            '<i class="bi bi-exclamation-triangle"></i> ' + data.mensaje +
                            '<div class="mt-2">' +
                            '<a href="/Pacientes/Crear" class="btn btn-sm btn-primary" target="_blank">' +
                            '<i class="bi bi-person-plus"></i> Crear Nuevo Paciente' +
                            '</a>' +
                            '</div>' +
                            '</div>';
                    }
                })
                .catch(error => {
                    console.error('Error al buscar paciente:', error);
                    resultadoDiv.innerHTML = '<div class="alert alert-danger">Error al buscar el paciente.</div>';
                });
        }

        function mostrarPacienteEncontrado(paciente) {
            document.getElementById('pacienteIdHidden').value = paciente.pacienteId;

            var infoHtml =
                '<p class="mb-1"><strong>Nombre:</strong> ' + paciente.nombreCompleto + '</p>' +
                '<p class="mb-1"><strong>Documento:</strong> ' + paciente.documento + '</p>' +
                '<p class="mb-1"><strong>Teléfono:</strong> ' + (paciente.telefono || 'No especificado') + '</p>' +
                '<p class="mb-1"><strong>Obra Social:</strong> ' + (paciente.obraSocial || 'No especificada') + '</p>' +
                '<p class="mb-0"><strong>Plan:</strong> ' + (paciente.plan || 'No especificado') + '</p>';

            document.getElementById('infoPaciente').innerHTML = infoHtml;

            document.getElementById('seccionBusqueda').classList.add('d-none');
            document.getElementById('seccionPacienteEncontrado').classList.remove('d-none');
            document.getElementById('seccionMotivoConsulta').classList.remove('d-none');
            document.getElementById('btnAsignarTurno').classList.remove('d-none');
        }

        function cambiarPaciente() {
            document.getElementById('seccionBusqueda').classList.remove('d-none');
            document.getElementById('seccionPacienteEncontrado').classList.add('d-none');
            document.getElementById('seccionMotivoConsulta').classList.add('d-none');
            document.getElementById('btnAsignarTurno').classList.add('d-none');
            document.getElementById('pacienteIdHidden').value = '';
            document.getElementById('motivoConsulta').value = '';
            document.getElementById('resultadoBusqueda').innerHTML = '';
        }

        // Permitir buscar con Enter
        document.getElementById('numeroDocumentoBusqueda').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                buscarPaciente();
            }
        });
    </script>
}
