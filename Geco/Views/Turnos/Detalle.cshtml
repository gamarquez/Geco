@model Entities.TurnoDto

@{
    ViewData["Title"] = "Detalle del Turno";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-calendar-check"></i> Detalle del Turno</h4>
            <div>
                @if (Model.Estado != "Completado" && Model.Estado != "Cancelado")
                {
                    <a asp-action="Editar" asp-route-id="@Model.TurnoId" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                }
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-@TempData["TipoMensaje"] alert-dismissible fade show">
                    @TempData["Mensaje"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row mb-3">
                <div class="col-md-6">
                    <h5><i class="bi bi-person"></i> Paciente</h5>
                    <p><strong>@Model.PacienteNombreCompleto</strong><br />
                    Doc: @Model.PacienteDocumento<br />
                    Tel: @(Model.PacienteTelefono ?? "No registrado")</p>
                </div>
                <div class="col-md-6">
                    <h5><i class="bi bi-person-badge"></i> Profesional</h5>
                    <p><strong>@Model.ProfesionalNombreCompleto</strong><br />
                    Matrícula: @Model.ProfesionalMatricula</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <h6>Fecha</h6>
                    <p><strong>@Model.FechaTurno.ToString("dd/MM/yyyy")</strong></p>
                </div>
                <div class="col-md-4">
                    <h6>Horario</h6>
                    <p><strong>@Model.HorarioFormateado</strong></p>
                </div>
                <div class="col-md-4">
                    <h6>Duración</h6>
                    <p><strong>@Model.DuracionMinutos minutos</strong></p>
                </div>
            </div>

            <div class="mb-3">
                <h6>Motivo de Consulta</h6>
                <p>@Model.MotivoConsulta</p>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Observaciones))
            {
                <div class="mb-3">
                    <h6>Observaciones</h6>
                    <p>@Model.Observaciones</p>
                </div>
            }

            <div class="mb-3">
                <h6>Estado</h6>
                <p><span class="badge @Model.EstadoBadgeClass">@Model.Estado</span></p>
            </div>

            @if (Model.Estado == "Cancelado" && !string.IsNullOrWhiteSpace(Model.MotivoCancelacion))
            {
                <div class="alert alert-danger">
                    <h6>Motivo de Cancelación</h6>
                    <p>@Model.MotivoCancelacion</p>
                </div>
            }

            @if (Model.Estado != "Cancelado" && Model.Estado != "Completado")
            {
                <div class="mt-4">
                    <h6>Acciones</h6>
                    <form asp-action="CambiarEstado" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="turnoId" value="@Model.TurnoId" />
                        @if (Model.Estado == "Pendiente")
                        {
                            <button type="submit" name="nuevoEstado" value="Confirmado" class="btn btn-sm btn-info">
                                <i class="bi bi-check-circle"></i> Confirmar
                            </button>
                        }
                        @if (Model.Estado == "Confirmado")
                        {
                            <button type="submit" name="nuevoEstado" value="EnCurso" class="btn btn-sm btn-primary">
                                <i class="bi bi-play-circle"></i> Iniciar
                            </button>
                        }
                        @if (Model.Estado == "EnCurso")
                        {
                            <button type="submit" name="nuevoEstado" value="Completado" class="btn btn-sm btn-success">
                                <i class="bi bi-check-circle"></i> Completar
                            </button>
                            <button type="submit" name="nuevoEstado" value="Ausente" class="btn btn-sm btn-secondary">
                                <i class="bi bi-x-circle"></i> Ausente
                            </button>
                        }
                    </form>
                </div>
            }

            <p class="text-muted small mt-3">
                Registrado: @Model.FechaAlta.ToString("dd/MM/yyyy HH:mm")
            </p>
        </div>
    </div>
</div>
