@model List<Entities.TurnoDto>

@{
    ViewData["Title"] = "Agenda del Profesional";
    var horariosLibres = ViewBag.HorariosLibres as List<TimeSpan> ?? new List<TimeSpan>();
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-calendar3"></i> Agenda del Profesional</h2>
            @if (ViewBag.ProfesionalNombre != null)
            {
                <h5 class="text-muted">@ViewBag.ProfesionalNombre</h5>
            }
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-list"></i> Ver Lista
            </a>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-@TempData["TipoMensaje"] alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card mb-3">
        <div class="card-body">
            <form asp-action="Agenda" method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Profesional</label>
                    <select name="profesionalId" asp-items="ViewBag.Profesionales" class="form-select">
                        <option value="">-- Seleccionar profesional --</option>
                    </select>
                </div>
                <div class="col-md-5">
                    <label class="form-label">Fecha</label>
                    <input type="date" name="fecha" class="form-control" value="@ViewBag.Fecha?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.MostrarMensaje == true)
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> @ViewBag.Mensaje
        </div>
    }
    else if (ViewBag.Fecha != null)
    {
        <!-- Navegación de fechas -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Agenda"
                       asp-route-profesionalId="@ViewBag.ProfesionalId"
                       asp-route-fecha="@(((DateTime)ViewBag.Fecha).AddDays(-1).ToString("yyyy-MM-dd"))"
                       class="btn btn-outline-primary">
                        <i class="bi bi-chevron-left"></i> Día Anterior
                    </a>
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-calendar-event"></i> @ViewBag.FechaFormateada
                    </h4>
                    <a asp-action="Agenda"
                       asp-route-profesionalId="@ViewBag.ProfesionalId"
                       asp-route-fecha="@(((DateTime)ViewBag.Fecha).AddDays(1).ToString("yyyy-MM-dd"))"
                       class="btn btn-outline-primary">
                        Día Siguiente <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>

        @if (horariosLibres.Any())
        {
            <!-- Vista de Agenda con Slots -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history"></i> Disponibilidad de Agenda
                        <span class="badge bg-light text-dark ms-2">@horariosLibres.Count slots disponibles</span>
                    </h5>
                </div>
                <div class="card-body p-3">
                    <div class="alert alert-info mb-3">
                        <i class="bi bi-info-circle"></i> Haga clic en un horario libre (verde) para asignar un turno
                    </div>
                    <div class="row g-2">
                        @foreach (var horario in horariosLibres.OrderBy(h => h))
                        {
                            var turnoEnHorario = Model?.FirstOrDefault(t => t.HoraInicio == horario);
                            var esOcupado = turnoEnHorario != null;

                            <div class="col-md-3 col-lg-2">
                                @if (esOcupado)
                                {
                                    <!-- Slot ocupado -->
                                    <div class="slot-ocupado p-3 border rounded">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <strong class="text-danger">@horario.ToString(@"hh\:mm")</strong>
                                            <i class="bi bi-lock-fill text-danger"></i>
                                        </div>
                                        <hr class="my-2" />
                                        <div>
                                            <small class="d-block text-truncate"><strong>@turnoEnHorario.PacienteNombreCompleto</strong></small>
                                            <small class="text-muted d-block text-truncate">@turnoEnHorario.MotivoConsulta</small>
                                            <span class="badge @turnoEnHorario.EstadoBadgeClass mt-1">@turnoEnHorario.Estado</span>
                                        </div>
                                        <div class="mt-2">
                                            <a asp-action="Detalle" asp-route-id="@turnoEnHorario.TurnoId" class="btn btn-sm btn-outline-info w-100">
                                                <i class="bi bi-eye"></i> Ver
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <!-- Slot libre -->
                                    <div class="slot-libre p-3 border rounded"
                                         onclick="abrirModalAsignarTurno('@horario.ToString(@"hh\:mm")')"
                                         style="cursor: pointer;">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <strong class="text-success">@horario.ToString(@"hh\:mm")</strong>
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                        </div>
                                        <hr class="my-2" />
                                        <div class="text-center py-2">
                                            <i class="bi bi-plus-circle text-success" style="font-size: 2rem;"></i>
                                            <div><small class="text-muted">Disponible</small></div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-md-4">
                            <small><i class="bi bi-check-circle-fill text-success"></i> Disponible: @horariosLibres.Count(h => !Model.Any(t => t.HoraInicio == h))</small>
                        </div>
                        <div class="col-md-4">
                            <small><i class="bi bi-lock-fill text-danger"></i> Ocupados: @Model.Count()</small>
                        </div>
                        <div class="col-md-4">
                            <small><i class="bi bi-clock"></i> Total slots: @horariosLibres.Count</small>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                <i class="bi bi-exclamation-triangle"></i>
                <h5>No hay disponibilidades configuradas para este día</h5>
                <p>Configure las disponibilidades de agenda para este profesional en el módulo de administración.</p>
                <a asp-controller="Disponibilidades" asp-action="Index" asp-route-profesionalId="@ViewBag.ProfesionalId" class="btn btn-warning">
                    <i class="bi bi-gear"></i> Configurar Disponibilidades
                </a>
            </div>
        }
    }
</div>

<!-- Modal para asignar turno -->
<div class="modal fade" id="modalAsignarTurno" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Asignar Turno</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="formAsignarTurno" asp-action="AsignarTurnoRapido" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="profesionalId" value="@ViewBag.ProfesionalId" />
                <input type="hidden" name="fecha" value="@ViewBag.Fecha?.ToString("yyyy-MM-dd")" />
                <input type="hidden" name="hora" id="horaSeleccionada" />
                <input type="hidden" name="pacienteId" id="pacienteIdHidden" />
                <input type="hidden" name="duracionMinutos" value="30" />

                <div class="modal-body">
                    <div class="alert alert-info">
                        <strong>Horario seleccionado:</strong> <span id="horaDisplay"></span>
                    </div>

                    <!-- Búsqueda de paciente por documento -->
                    <div class="card mb-3" id="seccionBusqueda">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0"><i class="bi bi-search"></i> Buscar Paciente</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="tipoDocumentoBusqueda" class="form-label">Tipo Documento *</label>
                                    <select id="tipoDocumentoBusqueda" class="form-select">
                                        <option value="DNI" selected>DNI</option>
                                        <option value="LC">LC</option>
                                        <option value="LE">LE</option>
                                        <option value="Pasaporte">Pasaporte</option>
                                        <option value="Otro">Otro</option>
                                    </select>
                                </div>
                                <div class="col-md-5 mb-3">
                                    <label for="numeroDocumentoBusqueda" class="form-label">Número Documento *</label>
                                    <input type="text" id="numeroDocumentoBusqueda" class="form-control" placeholder="Ej: 12345678" />
                                </div>
                                <div class="col-md-3 d-flex align-items-end mb-3">
                                    <button type="button" class="btn btn-primary w-100" onclick="buscarPaciente()">
                                        <i class="bi bi-search"></i> Buscar
                                    </button>
                                </div>
                            </div>
                            <div id="resultadoBusqueda"></div>
                        </div>
                    </div>

                    <!-- Información del paciente encontrado -->
                    <div class="card mb-3 d-none" id="seccionPacienteEncontrado">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0"><i class="bi bi-person-check"></i> Paciente Encontrado</h6>
                        </div>
                        <div class="card-body">
                            <div id="infoPaciente"></div>
                            <button type="button" class="btn btn-sm btn-secondary mt-2" onclick="cambiarPaciente()">
                                <i class="bi bi-arrow-left"></i> Buscar otro paciente
                            </button>
                        </div>
                    </div>

                    <!-- Motivo de consulta -->
                    <div class="mb-3 d-none" id="seccionMotivoConsulta">
                        <label for="motivoConsulta" class="form-label">Motivo de Consulta *</label>
                        <textarea name="motivoConsulta" id="motivoConsulta" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success d-none" id="btnAsignarTurno">
                        <i class="bi bi-check-circle"></i> Asignar Turno
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .slot-libre {
            background-color: #d4edda;
            border-color: #28a745 !important;
            transition: all 0.3s ease;
            min-height: 150px;
        }
        .slot-libre:hover {
            background-color: #c3e6cb;
            box-shadow: 0 4px 8px rgba(40, 167, 69, 0.3);
            transform: translateY(-2px);
        }
        .slot-ocupado {
            background-color: #f8d7da;
            border-color: #dc3545 !important;
            min-height: 150px;
        }
    </style>
}

@section Scripts {
    <script>
        var modalAsignarTurno = new bootstrap.Modal(document.getElementById('modalAsignarTurno'));

        function abrirModalAsignarTurno(hora) {
            // Resetear el modal
            document.getElementById('horaSeleccionada').value = hora;
            document.getElementById('horaDisplay').textContent = hora;
            document.getElementById('pacienteIdHidden').value = '';
            document.getElementById('motivoConsulta').value = '';
            document.getElementById('tipoDocumentoBusqueda').value = 'DNI';
            document.getElementById('numeroDocumentoBusqueda').value = '';
            document.getElementById('resultadoBusqueda').innerHTML = '';

            // Mostrar sección de búsqueda y ocultar otras
            document.getElementById('seccionBusqueda').classList.remove('d-none');
            document.getElementById('seccionPacienteEncontrado').classList.add('d-none');
            document.getElementById('seccionMotivoConsulta').classList.add('d-none');
            document.getElementById('btnAsignarTurno').classList.add('d-none');

            modalAsignarTurno.show();
        }

        function buscarPaciente() {
            var tipoDoc = document.getElementById('tipoDocumentoBusqueda').value;
            var numeroDoc = document.getElementById('numeroDocumentoBusqueda').value.trim();
            var resultadoDiv = document.getElementById('resultadoBusqueda');

            if (!numeroDoc) {
                resultadoDiv.innerHTML = '<div class="alert alert-warning">Por favor, ingrese el número de documento</div>';
                return;
            }

            resultadoDiv.innerHTML = '<div class="text-center"><div class="spinner-border spinner-border-sm" role="status"></div> Buscando...</div>';

            fetch('/Turnos/BuscarPacientePorDocumento?tipoDocumento=' + encodeURIComponent(tipoDoc) + '&numeroDocumento=' + encodeURIComponent(numeroDoc))
                .then(response => response.json())
                .then(data => {
                    if (data.encontrado) {
                        // Paciente encontrado
                        resultadoDiv.innerHTML = '';
                        mostrarPacienteEncontrado(data.paciente);
                    } else {
                        // Paciente no encontrado
                        resultadoDiv.innerHTML =
                            '<div class="alert alert-warning">' +
                            '<i class="bi bi-exclamation-triangle"></i> ' + data.mensaje +
                            '<div class="mt-2">' +
                            '<a href="/Pacientes/Crear" class="btn btn-sm btn-primary" target="_blank">' +
                            '<i class="bi bi-person-plus"></i> Crear Nuevo Paciente' +
                            '</a>' +
                            '</div>' +
                            '</div>';
                    }
                })
                .catch(error => {
                    console.error('Error al buscar paciente:', error);
                    resultadoDiv.innerHTML = '<div class="alert alert-danger">Error al buscar el paciente. Por favor, intente nuevamente.</div>';
                });
        }

        function mostrarPacienteEncontrado(paciente) {
            document.getElementById('pacienteIdHidden').value = paciente.pacienteId;

            var infoHtml =
                '<p class="mb-1"><strong>Nombre:</strong> ' + paciente.nombreCompleto + '</p>' +
                '<p class="mb-1"><strong>Documento:</strong> ' + paciente.documento + '</p>' +
                '<p class="mb-1"><strong>Teléfono:</strong> ' + (paciente.telefono || 'No especificado') + '</p>' +
                '<p class="mb-1"><strong>Obra Social:</strong> ' + (paciente.obraSocial || 'No especificada') + '</p>' +
                '<p class="mb-0"><strong>Plan:</strong> ' + (paciente.plan || 'No especificado') + '</p>';

            document.getElementById('infoPaciente').innerHTML = infoHtml;

            // Mostrar sección de paciente encontrado y motivo de consulta
            document.getElementById('seccionBusqueda').classList.add('d-none');
            document.getElementById('seccionPacienteEncontrado').classList.remove('d-none');
            document.getElementById('seccionMotivoConsulta').classList.remove('d-none');
            document.getElementById('btnAsignarTurno').classList.remove('d-none');
        }

        function cambiarPaciente() {
            document.getElementById('seccionBusqueda').classList.remove('d-none');
            document.getElementById('seccionPacienteEncontrado').classList.add('d-none');
            document.getElementById('seccionMotivoConsulta').classList.add('d-none');
            document.getElementById('btnAsignarTurno').classList.add('d-none');
            document.getElementById('pacienteIdHidden').value = '';
            document.getElementById('motivoConsulta').value = '';
            document.getElementById('resultadoBusqueda').innerHTML = '';
        }

        // Permitir buscar con Enter
        document.getElementById('numeroDocumentoBusqueda').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                buscarPaciente();
            }
        });
    </script>
}
