@model List<Entities.HistoriaClinicaDto>

@{
    ViewData["Title"] = "Historias Clínicas";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-clipboard2-pulse"></i> Historias Clínicas</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Crear" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nueva Historia Clínica
            </a>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-@TempData["TipoMensaje"] alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros de búsqueda -->
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title"><i class="bi bi-funnel"></i> Filtros</h5>
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Fecha Desde</label>
                    <input type="date" name="fechaDesde" class="form-control" value="@ViewBag.FechaDesde?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Hasta</label>
                    <input type="date" name="fechaHasta" class="form-control" value="@ViewBag.FechaHasta?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Diagnóstico</label>
                    <input type="text" name="diagnostico" class="form-control"
                           placeholder="Buscar por diagnóstico..." value="@ViewBag.Diagnostico" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Paciente</th>
                                <th>Profesional</th>
                                <th>Motivo</th>
                                <th>Diagnóstico</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var historia in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@historia.FechaConsulta.ToString("dd/MM/yyyy")</strong>
                                        <br />
                                        <small class="text-muted">@historia.FechaConsulta.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <strong>@historia.PacienteNombreCompleto</strong>
                                        <br />
                                        <small class="text-muted">@historia.PacienteDocumento</small>
                                    </td>
                                    <td>
                                        @historia.ProfesionalNombreCompleto
                                        <br />
                                        <small class="text-muted">Mat: @historia.ProfesionalMatricula</small>
                                    </td>
                                    <td>@historia.MotivoConsulta</td>
                                    <td>
                                        @if (historia.Diagnostico.Length > 50)
                                        {
                                            <span>@historia.Diagnostico.Substring(0, 50)...</span>
                                        }
                                        else
                                        {
                                            <span>@historia.Diagnostico</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Detalle" asp-route-id="@historia.HistoriaClinicaId"
                                               class="btn btn-sm btn-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Editar" asp-route-id="@historia.HistoriaClinicaId"
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger"
                                                    onclick="confirmarEliminacion(@historia.HistoriaClinicaId, '@historia.PacienteNombreCompleto')"
                                                    title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Paginación -->
                @if (ViewBag.TotalPaginas > 1)
                {
                    <nav aria-label="Paginación">
                        <ul class="pagination justify-content-center mt-3">
                            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                            {
                                <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageNumber="@i"
                                       asp-route-fechaDesde="@ViewBag.FechaDesde"
                                       asp-route-fechaHasta="@ViewBag.FechaHasta"
                                       asp-route-diagnostico="@ViewBag.Diagnostico">
                                        @i
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>
        <div class="mt-3">
            <p class="text-muted">
                Total: <strong>@ViewBag.TotalRegistros</strong> historias clínicas
                | Página <strong>@ViewBag.PageNumber</strong> de <strong>@ViewBag.TotalPaginas</strong>
            </p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay historias clínicas registradas.
            <a asp-action="Crear">Crear la primera</a>
        </div>
    }
</div>

<form id="formEliminar" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmarEliminacion(id, paciente) {
            if (confirm('¿Está seguro que desea eliminar la historia clínica del paciente ' + paciente + '?')) {
                var form = document.getElementById('formEliminar');
                form.action = '/HistoriasClinicas/Eliminar/' + id;
                form.submit();
            }
        }
    </script>
}
