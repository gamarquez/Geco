@model List<Entities.PrescripcionDto>

@{
    ViewData["Title"] = "Prescripciones Médicas";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-file-medical"></i> Prescripciones Médicas</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Crear" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nueva Prescripción
            </a>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-@TempData["TipoMensaje"] alert-dismissible fade show">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Paciente</label>
                    <select name="pacienteId" asp-items="ViewBag.Pacientes" class="form-select">
                        <option value="">-- Todos --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Profesional</label>
                    <select name="profesionalId" asp-items="ViewBag.Profesionales" class="form-select">
                        <option value="">-- Todos --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Fecha Desde</label>
                    <input type="date" name="fechaDesde" class="form-control" value="@ViewBag.FechaDesde?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Fecha Hasta</label>
                    <input type="date" name="fechaHasta" class="form-control" value="@ViewBag.FechaHasta?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Paciente</th>
                                <th>Profesional</th>
                                <th>Diagnóstico</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var prescripcion in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@prescripcion.FechaPrescripcion.ToString("dd/MM/yyyy")</strong>
                                        <br />
                                        <small class="text-muted">@prescripcion.FechaPrescripcion.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <strong>@prescripcion.PacienteNombreCompleto</strong>
                                        <br />
                                        <small class="text-muted">@prescripcion.PacienteDocumento</small>
                                    </td>
                                    <td>
                                        @prescripcion.ProfesionalNombreCompleto
                                        <br />
                                        <small class="text-muted">Mat: @prescripcion.ProfesionalMatricula</small>
                                    </td>
                                    <td>
                                        @if (prescripcion.Diagnostico.Length > 50)
                                        {
                                            <span>@prescripcion.Diagnostico.Substring(0, 50)...</span>
                                        }
                                        else
                                        {
                                            <span>@prescripcion.Diagnostico</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="@prescripcion.EstadoVigenciaClass">@prescripcion.EstadoVigencia</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Detalle" asp-route-id="@prescripcion.PrescripcionId"
                                           class="btn btn-sm btn-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <p class="text-muted">
                Total: <strong>@ViewBag.TotalRegistros</strong> prescripciones
                | Página <strong>@ViewBag.PageNumber</strong> de <strong>@ViewBag.TotalPaginas</strong>
            </p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay prescripciones registradas.
        </div>
    }
</div>
