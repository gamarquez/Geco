<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GECO</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #667eea !important;
        }

        .main-content {
            min-height: calc(100vh - 120px);
            padding-top: 20px;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 20px 0;
            margin-top: 40px;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-hospital"></i> GECO
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Inicio
                            </a>
                        </li>

                        @if (ViewBag.UsuarioActual != null)
                        {
                            <!-- MENÚ MI AGENDA (solo para profesionales) -->
                            @if (ViewBag.EsProfesional)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Turnos" asp-action="Agenda">
                                        <i class="bi bi-calendar-check"></i> Mi Agenda
                                    </a>
                                </li>
                            }

                            <!-- MENÚ DE TURNOS -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Turnos" asp-action="Index">
                                    <i class="bi bi-calendar3"></i> Turnos
                                </a>
                            </li>

                            <!-- MENÚ DE PACIENTES -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Pacientes" asp-action="Index">
                                    <i class="bi bi-people"></i> Pacientes
                                </a>
                            </li>

                            <!-- MENÚ ATENCIÓN MÉDICA (solo para profesionales) -->
                            @if (ViewBag.EsProfesional)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAtencion" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-heart-pulse"></i> Atención Médica
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="HistoriasClinicas" asp-action="Index">
                                                <i class="bi bi-journal-medical"></i> Historias Clínicas
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Prescripciones" asp-action="Index">
                                                <i class="bi bi-file-medical"></i> Prescripciones
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- MENÚ DE ADMINISTRACIÓN (solo para administradores) -->
                            @if (ViewBag.EsAdministrador)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAdmin" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear"></i> Administración
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Profesionales" asp-action="Index">
                                                <i class="bi bi-person-badge"></i> Profesionales
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="ObrasSociales" asp-action="Index">
                                                <i class="bi bi-building"></i> Obras Sociales
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Planes" asp-action="Index">
                                                <i class="bi bi-card-list"></i> Planes
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Disponibilidades" asp-action="Index">
                                                <i class="bi bi-calendar-week"></i> Disponibilidades de Agenda
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-people"></i> Usuarios
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-list-ol"></i> Nomenclador
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <!-- MENÚ DE USUARIO -->
                    @if (ViewBag.UsuarioActual != null)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @ViewBag.NombreUsuario
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><h6 class="dropdown-header">@ViewBag.TipoUsuario</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Auth" asp-action="CambiarPassword">
                                            <i class="bi bi-shield-lock"></i> Cambiar Contraseña
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - GECO - Gestión y Consultorios</p>
            <small>Versión 1.0.0</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>