@model List<Entities.ObraSocialDto>

@{
    ViewData["Title"] = "Obras Sociales";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-building"></i> Obras Sociales</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Crear" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nueva Obra Social
            </a>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-@TempData["TipoMensaje"] alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Razón Social</th>
                                <th>CUIT</th>
                                <th>Teléfono</th>
                                <th>Planes</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var os in Model)
                            {
                                <tr>
                                    <td><strong>@os.Nombre</strong></td>
                                    <td>@(os.RazonSocial ?? "-")</td>
                                    <td>@(os.CUIT ?? "-")</td>
                                    <td>@(os.Telefono ?? "-")</td>
                                    <td>
                                        <a asp-action="Planes" asp-route-id="@os.ObraSocialId" class="badge bg-info text-decoration-none">
                                            @os.CantidadPlanes planes
                                        </a>
                                    </td>
                                    <td>
                                        @if (os.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Detalle" asp-route-id="@os.ObraSocialId"
                                               class="btn btn-sm btn-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Planes" asp-route-id="@os.ObraSocialId"
                                               class="btn btn-sm btn-success" title="Ver planes">
                                                <i class="bi bi-card-list"></i>
                                            </a>
                                            <a asp-action="Editar" asp-route-id="@os.ObraSocialId"
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger"
                                                    onclick="confirmarEliminacion(@os.ObraSocialId, '@os.Nombre')"
                                                    title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <p class="text-muted">Total: <strong>@Model.Count</strong> obras sociales</p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay obras sociales registradas.
            <a asp-action="Crear">Crear la primera</a>
        </div>
    }
</div>

<form id="formEliminar" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmarEliminacion(id, nombre) {
            if (confirm('¿Está seguro que desea eliminar la obra social ' + nombre + '? Esto también desactivará todos sus planes.')) {
                var form = document.getElementById('formEliminar');
                form.action = '/ObrasSociales/Eliminar/' + id;
                form.submit();
            }
        }
    </script>
}