@model Entities.ObraSocialDto

@{
    ViewData["Title"] = "Detalle de Obra Social";
    var planes = ViewBag.Planes as List<Entities.PlanDto>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-building"></i> Detalle de Obra Social
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <h5>@Model.Nombre</h5>
                            <p class="text-muted">@(Model.RazonSocial ?? "Sin razón social")</p>
                        </div>
                        <div class="col-md-4 text-end">
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success fs-6">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">Inactivo</span>
                            }
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">CUIT:</label>
                            <p>@(Model.CUIT ?? "-")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Teléfono:</label>
                            <p>@(Model.Telefono ?? "-")</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Email:</label>
                            <p>@(Model.Email ?? "-")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Dirección:</label>
                            <p>@(Model.Direccion ?? "-")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Observaciones))
                    {
                        <div class="mb-3">
                            <label class="fw-bold">Observaciones:</label>
                            <p class="text-muted">@Model.Observaciones</p>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="fw-bold">Fecha de Alta:</label>
                        <p>@Model.FechaAlta.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>

                    <hr />

                    <h5 class="mb-3">
                        <i class="bi bi-card-list"></i> Planes Asociados
                        <span class="badge bg-secondary">@(planes?.Count ?? 0)</span>
                    </h5>

                    @if (planes != null && planes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Código</th>
                                        <th>Cobertura</th>
                                        <th>Copago</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var plan in planes)
                                    {
                                        <tr>
                                            <td><strong>@plan.Nombre</strong></td>
                                            <td>@(plan.Codigo ?? "-")</td>
                                            <td>@plan.CoberturaTexto</td>
                                            <td>@(plan.Copago.HasValue ? $"${plan.Copago:N2}" : "-")</td>
                                            <td>
                                                @if (plan.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Esta obra social no tiene planes registrados.
                        </div>
                    }

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Planes" asp-route-id="@Model.ObraSocialId" class="btn btn-success">
                            <i class="bi bi-card-list"></i> Gestionar Planes
                        </a>
                        <a asp-action="Editar" asp-route-id="@Model.ObraSocialId" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al Listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
